$(document).ready(function() {

    $('#preOrder').click(function() {
        var re = /\/[a-z_]+-/
        var str = document.getElementById('image-backpack').src
        var data = str.match(re)[0].slice(1,-1)

        $('#backpackColor').val(data)

    })


    $('#color-orange').change(function() {
        $('#image-backpack').fadeOut(500, function() {
            $('#image-backpack').attr("src","<%= asset_path('backpacks/orange.jpg') %>");
            $('#image-backpack').fadeIn(500);
        });
    })

    $('#color-yellow').change(function() {
        $('#image-backpack').fadeOut(500, function() {
            $('#image-backpack').attr("src","<%= asset_path('backpacks/yellow.jpg') %>");
            $('#image-backpack').fadeIn(500);
        });
    })

    $('#color-rebecca-purple').change(function() {
        $('#image-backpack').fadeOut(500, function() {
            $('#image-backpack').attr("src","<%= asset_path('backpacks/rebecca_purple.jpg') %>");
            $('#image-backpack').fadeIn(500);
        });
    })
})