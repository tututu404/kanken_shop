$(document).ready(function() {

    $('#preOrder').click(function() {
        var re = /\/[a-z_]+-/
        var str = document.getElementById('image-backpack').src
        var data = str.match(re)[0].slice(1,-1)

        $('#backpackColor').val(data)

    })

    $('#color-orange').change(function() {
        document.getElementById('image-backpack').src = "<%= asset_path('backpacks/orange.jpg') %>";
    })

    $('#color-yellow').change(function() {
        document.getElementById('image-backpack').src = "<%= asset_path('backpacks/yellow.jpg') %>";
    })

    $('#color-rebecca-purple').change(function() {
        document.getElementById('image-backpack').src = "<%= asset_path('backpacks/rebecca_purple.jpg') %>";
    })
})