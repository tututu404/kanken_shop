<%= form_for @call, remote: true, class: 'form-inline' do |form| %>
    <div class="row">
      <div class="col-md-6">
        <%= form.text_field :phone, class: 'form-control phone', value: '+375', type: 'tel' %>
      </div>
      <div class="col-md-6">
        <%= form.submit t('views.call_section.button'), class: 'btn btn-danger btn-block' %>
      </div>
    </div>
<% end %>

