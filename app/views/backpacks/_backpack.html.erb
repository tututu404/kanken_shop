<tr>
  <td><%= backpack.color %></td>
  <td>
    <% if backpack.status %>
        <%= form_for backpack do |form| %>
            <div class="form-group" hidden>
              <%= form.check_box :status, checked: false %>
            </div>
            <%= form.submit t('views.admin_panel.delete'), class: 'btn btn-danger' %>
        <% end %>
    <% else %>
        <%= form_for backpack do |form| %>
            <div class="form-group" hidden>
              <%= form.check_box :status, checked: true %>
            </div>
            <%= form.submit t('views.admin_panel.add'), class: 'btn btn-success' %>
        <% end %>
    <% end %>
  </td>
</tr>